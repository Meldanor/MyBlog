---
import '@fontsource/montserrat';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <meta name="description" content="Mel's Blog is about computer science and games." />
    <meta name="robots" content="noai, noimageai, follow, index" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="keywords" content="computer science, computer games, blog" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <div class="flex justify-center w-full mt-16">
        <div class="max-w-5xl w-full">
          <slot />
        </div>
      </div>
    </main>
    <footer class="mt-8 flex gap-4 justify-center items-center w-full">
      <p>by <strong>Kilian GÃ¤rtner</strong> with Astro&Strapi</p>
      <p><a class="underline" href="https://kilian-gaertner.dev">Website</a></p>
      <p><a class="underline" href="https://github.com/Meldanor">GitHub</a></p>
    </footer>
  </body>
</html>
